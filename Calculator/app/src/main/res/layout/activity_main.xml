<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/txt_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=""
            android:gravity="bottom|right"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="1"
            />



        <TextView
            android:id="@+id/txt_output"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_ac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"


                />

            <TextView
                android:id="@+id/txt_op"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+-"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt_percent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/operator_background"
                android:gravity="center"
                android:layout_weight="1"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"


                />

            <TextView
                android:id="@+id/txt8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/operator_background"
                android:gravity="center"
                android:layout_weight="1"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"


                />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_subtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/operator_background"
                android:gravity="center"
                android:layout_weight="1"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"


                />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/number_border"
                android:gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30sp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/operator_background"
                android:gravity="center"
                android:layout_weight="1"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">


            <TextView
                android:id="@+id/txt0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_margin="8dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/border2"
                android:gravity="center"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt_dec_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:layout_margin="8dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1.5"
                />

            <TextView
                android:id="@+id/txt_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:layout_margin="8dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/operator_background"
                android:gravity="center"
                android:layout_weight="1.5"

                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>